<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- 1. HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyến đi của tôi"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. NỘI DUNG CHÍNH -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="90dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TAB TRẠNG THÁI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sắp tới"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/bg_blue_rounded"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoàn tất"
                    android:textColor="#888888"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/bg_white_rounded_top"
                    android:backgroundTint="#EEEEEE"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã hủy"
                    android:textColor="#888888"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/bg_white_rounded_top"
                    android:backgroundTint="#EEEEEE"/>
            </LinearLayout>

            <!-- ITEM 1: Sắp tới (CÓ NÚT HỦY) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imgCard1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_demo_1"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Khách sạn Kim Liên"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/imgCard1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvAddress1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Đống Đa, Hà Nội"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/imgCard1"
                        app:layout_constraintTop_toBottomOf="@id/tvName1"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <TextView
                        android:id="@+id/tvRoomInfo1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Phòng Deluxe"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/imgCard1"
                        app:layout_constraintTop_toBottomOf="@id/tvAddress1"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toEndOf="@id/imgCard1"
                        app:layout_constraintTop_toBottomOf="@id/tvRoomInfo1"
                        app:layout_constraintEnd_toEndOf="parent">


                    <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="12/12/2025 - 14/12/2025"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/imgCard1"/>

                    <!-- Vùng Footer của Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/line1">

                        <!-- Trạng thái -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã xác nhận"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:background="#E8F5E9"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>

                        <!-- Spacer đẩy giá tiền và nút hủy sang phải -->
                        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

                        <!-- Giá tiền -->

                        <!-- NÚT HỦY (Chỉ có ở item này) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="1.800.000 đ"
                            android:textColor="#2E4EFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_white_rounded_top"
                            android:backgroundTint="#FFEBEE"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:text="Hủy phòng"
                            android:textColor="#F44336"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                        <!-- Lưu ý: Bạn có thể tạo bg_red_outline.xml để làm viền đỏ nếu thích -->

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- ITEM 2: Hoàn tất -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imgCard2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_demo_2"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mường Thanh Luxury"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/imgCard2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvAddress2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Nha Trang, Khánh Hòa"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/imgCard2"
                        app:layout_constraintTop_toBottomOf="@id/tvName2"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvRoomInfo2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Phòng Suite"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/imgCard2"
                        app:layout_constraintTop_toBottomOf="@id/tvAddress2"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/imgCard2"
                        app:layout_constraintTop_toBottomOf="@id/tvAddress2">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="09/11/2025 - 14/11/2025"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/imgCard2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/line2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã hoàn thành"
                            android:textColor="#2196F3"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:background="#E3F2FD"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>

                        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.200.000 đ"
                            android:textColor="#2E4EFF"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- ITEM 3: Đã hủy -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imgCard3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_demo_3"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dalat Palace Hotel"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/imgCard3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvAddress3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Phường 1, Đà Lạt"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/imgCard3"
                        app:layout_constraintTop_toBottomOf="@id/tvName3"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvRoomInfo3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Phòng Standard"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/imgCard3"
                        app:layout_constraintTop_toBottomOf="@id/tvAddress3"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/imgCard3"
                        app:layout_constraintTop_toBottomOf="@id/tvAddress3">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="01/11/2025 - 03/11/2025"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/imgCard3"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/line3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã hủy"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:background="#FFEBEE"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>

                        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.500.000 đ"
                            android:textColor="#888888"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 3. BOTTOM NAVIGATION -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#888888"
            android:textSize="11sp"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="#888888"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textColor="#888888"
            android:textSize="11sp"
            android:drawableTop="@drawable/ic_explore"
            android:drawableTint="#888888"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:textColor="#2E4EFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_payment"
            android:drawableTint="#2E4EFF"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#888888"
            android:textSize="11sp"
            android:drawableTop="@drawable/ic_profile"
            android:drawableTint="#888888"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>