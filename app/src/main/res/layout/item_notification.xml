<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_noti_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_launcher_background"
        android:padding="10dp"
        android:src="@android:drawable/ic_popup_reminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />
    <View
        android:id="@+id/view_unread_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#FF0000"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="@id/img_noti_icon"
        app:layout_constraintTop_toTopOf="@id/img_noti_icon" />

    <TextView
        android:id="@+id/tv_noti_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Khuyến mãi 50%!"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_noti_time"
        app:layout_constraintStart_toEndOf="@+id/img_noti_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_noti_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nhập mã SUMMER2024 để được giảm giá ngay cho chuyến đi Đà Lạt."
        android:textColor="#616161"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_noti_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_noti_title" />

    <TextView
        android:id="@+id/tv_noti_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 giờ trước"
        android:textColor="#9E9E9E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_noti_body" />

</androidx.constraintlayout.widget.ConstraintLayout>