<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_icon_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E3F2FD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_noti_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_notification"
            app:tint="#2196F3" /> </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view_unread_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_unread_dot"
        android:elevation="2dp"
        app:layout_constraintCircle="@id/card_icon_container"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="24dp"
        app:layout_constraintStart_toStartOf="@id/card_icon_container"
        app:layout_constraintTop_toTopOf="@id/card_icon_container" />

    <TextView
        android:id="@+id/tv_noti_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Khuyến mãi Độc quyền!"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_noti_time"
        app:layout_constraintStart_toEndOf="@+id/card_icon_container"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_noti_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nhập mã HOTEL50 để giảm ngay 50%..."
        android:textColor="#616161"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_noti_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_noti_title" />

    <TextView
        android:id="@+id/tv_noti_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 giờ trước"
        android:textColor="#9E9E9E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_noti_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_noti_title"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/tv_noti_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_noti_body" />

</androidx.constraintlayout.widget.ConstraintLayout>