<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Nội dung cuộn được -->
    <!-- fillViewport="true" là quan trọng để layout_weight hoạt động -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">
                <ImageButton
                    android:id="@+id/btn_back_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồ sơ cá nhân"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <!-- Avatar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:id="@+id/img_profile_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:background="@drawable/bg_input_underline"
                    android:padding="2dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và Tên"
                android:textSize="12sp"
                android:textColor="#888888"/>
            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="#888888"/>
            <TextView
                android:id="@+id/tv_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textSize="12sp"
                android:textColor="#888888"/>
            <TextView
                android:id="@+id/tv_profile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Role -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vai trò"
                android:textSize="12sp"
                android:textColor="#888888"/>
            <TextView
                android:id="@+id/tv_profile_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="32dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Nút Edit Profile -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_goto_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa hồ sơ"
                android:background="@drawable/bg_button_blue"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Nút Admin Panel (Ẩn mặc định) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_admin_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Panel"
                android:background="@drawable/bg_button_blue"
                android:backgroundTint="#FFC107"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Nút Đăng xuất -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:background="@drawable/bg_button_blue"
                android:backgroundTint="#FFEBEE"
                android:textColor="#FF0000"
                android:textAllCaps="false"
                android:textSize="16sp"/>

            <!-- Một chút khoảng cách dưới cùng cho đẹp -->
            <View android:layout_width="match_parent" android:layout_height="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Navbar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp"/>

</RelativeLayout>