<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- PHẦN NỘI DUNG CUỘN (SCROLL) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1. HEADER & AVATAR -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Avatar -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/avatarContainer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/user"
                        android:scaleType="centerCrop"
                        android:contentDescription="@null" />
                </androidx.cardview.widget.CardView>

                <!-- Nút thông báo -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNotification"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/avatarContainer"
                    app:layout_constraintBottom_toBottomOf="@id/avatarContainer">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_notification"
                        app:tint="#333333"
                        android:layout_gravity="center"
                        android:contentDescription="@string/desc_notification" />
                </androidx.cardview.widget.CardView>

                <!-- Lời chào -->
                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Xin chào, Dương \nTìm nơi nghỉ dưỡng nào!"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toEndOf="@id/avatarContainer"
                    app:layout_constraintEnd_toStartOf="@id/cardNotification"
                    app:layout_constraintTop_toTopOf="@id/avatarContainer"
                    app:layout_constraintBottom_toBottomOf="@id/avatarContainer" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 2. THANH TÌM KIẾM (SEARCH) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="24dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_rounded_top"
                    android:backgroundTint="#FFFFFF"
                    android:hint="Tìm khách sạn, địa điểm..."
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="12dp"
                    android:elevation="2dp" />

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_blue_rounded"
                    android:layout_marginStart="12dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_filter"
                        app:tint="#FFFFFF"
                        android:contentDescription="@string/desc_filter" />
                </FrameLayout>
            </LinearLayout>

            <!-- 3. BANNER (Màu Cam - Book Now) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/img_banner_2"
                    android:padding="20dp">

                    <!-- Tiêu đề -->
                    <TextView
                        android:id="@+id/tvBannerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lên kế hoạch"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:elevation="5dp"/>

                    <!-- Subtitle -->
                    <TextView
                        android:id="@+id/tvBannerSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvBannerTitle"
                        android:layout_marginTop="6dp"
                        android:elevation="5dp"
                        android:text="Giảm ngay 30% cho lần đặt phòng đầu tiên."
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <!-- Button -->
                    <TextView
                        android:id="@+id/btnBanner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đặt ngay ➔"
                        android:background="@drawable/bg_white_rounded_top"
                        android:backgroundTint="#FFFFFF"
                        android:textColor="#FF7043"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:elevation="5dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <!-- 4. POPULAR HOTEL (Khách sạn phổ biến) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Khách sạn phổ biến"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSeeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#2E4EFF" />
            </LinearLayout>

            <!-- DANH SÁCH KHÁCH SẠN (LIST) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ITEM 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <!-- Ảnh bên trái -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImage1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_demo_1"
                                android:scaleType="centerCrop"
                                android:contentDescription="@null" />
                        </androidx.cardview.widget.CardView>

                        <!-- Tên khách sạn -->
                        <TextView
                            android:id="@+id/tvName1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Khách sạn Kim Liên"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@id/cardImage1"
                            app:layout_constraintTop_toTopOf="@id/cardImage1"
                            app:layout_constraintEnd_toStartOf="@id/tvRating1" />

                        <!-- Địa chỉ -->
                        <ImageView
                            android:id="@+id/icLoc1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_location_pin"
                            app:tint="#FF9800"
                            android:layout_marginTop="6dp"
                            android:contentDescription="@null"
                            app:layout_constraintStart_toStartOf="@id/tvName1"
                            app:layout_constraintTop_toBottomOf="@id/tvName1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="2.5 km • Hà Nội"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            app:layout_constraintStart_toEndOf="@id/icLoc1"
                            app:layout_constraintTop_toTopOf="@id/icLoc1"
                            app:layout_constraintBottom_toBottomOf="@id/icLoc1"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Giá -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá từ 900.000đ / Đêm"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@id/tvName1"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <!-- Rating -->
                        <ImageView
                            android:id="@+id/icStar1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFC107"
                            android:contentDescription="@null"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvRating1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.2"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintEnd_toStartOf="@id/icStar1"
                            app:layout_constraintTop_toTopOf="@id/icStar1"
                            app:layout_constraintBottom_toBottomOf="@id/icStar1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- ITEM 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImage2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_demo_3"
                                android:scaleType="centerCrop"
                                android:contentDescription="@null" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvName2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Amara Hanoi Hotel"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@id/cardImage2"
                            app:layout_constraintTop_toTopOf="@id/cardImage2"
                            app:layout_constraintEnd_toStartOf="@id/tvRating2" />

                        <ImageView
                            android:id="@+id/icLoc2"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_location_pin"
                            app:tint="#FF9800"
                            android:layout_marginTop="6dp"
                            android:contentDescription="@null"
                            app:layout_constraintStart_toStartOf="@id/tvName2"
                            app:layout_constraintTop_toBottomOf="@id/tvName2" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="0.5 km • Hà Nội"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            app:layout_constraintStart_toEndOf="@id/icLoc2"
                            app:layout_constraintTop_toTopOf="@id/icLoc2"
                            app:layout_constraintBottom_toBottomOf="@id/icLoc2"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá từ 1.200.000đ / Đêm"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@id/tvName2"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/icStar2"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFC107"
                            android:contentDescription="@null"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvRating2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintEnd_toStartOf="@id/icStar2"
                            app:layout_constraintTop_toTopOf="@id/icStar2"
                            app:layout_constraintBottom_toBottomOf="@id/icStar2" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- ITEM 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImage3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@null"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_demo_4" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvName3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Xanh Palace Hotel"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@id/cardImage3"
                            app:layout_constraintTop_toTopOf="@id/cardImage3"
                            app:layout_constraintEnd_toStartOf="@id/tvRating3" />

                        <ImageView
                            android:id="@+id/icLoc3"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_location_pin"
                            app:tint="#FF9800"
                            android:layout_marginTop="6dp"
                            android:contentDescription="@null"
                            app:layout_constraintStart_toStartOf="@id/tvName3"
                            app:layout_constraintTop_toBottomOf="@id/tvName3" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1.0 km • Hà Nội"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            app:layout_constraintStart_toEndOf="@id/icLoc3"
                            app:layout_constraintTop_toTopOf="@id/icLoc3"
                            app:layout_constraintBottom_toBottomOf="@id/icLoc3"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá từ 2.500.000đ / Đêm"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@id/tvName3"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/icStar3"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFC107"
                            android:contentDescription="@null"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvRating3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintEnd_toStartOf="@id/icStar3"
                            app:layout_constraintTop_toTopOf="@id/icStar3"
                            app:layout_constraintBottom_toBottomOf="@id/icStar3" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 5. BOTTOM NAVIGATION (4 ITEMS) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:paddingTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ITEM 1: HOME (XANH - ĐANG CHỌN) -->
        <TextView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="#2E4EFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="#2E4EFF"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:gravity="center" />

        <!-- ITEM 2: EXPLORE -->
        <TextView
            android:id="@+id/navExplore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/explore"
            android:textColor="#888888"
            android:textSize="11sp"
            android:drawableTop="@drawable/ic_explore"
            android:drawableTint="#888888"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:gravity="center" />

        <!-- ITEM 3: BOOKING -->
        <TextView
            android:id="@+id/navBooking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/booking"
            android:textColor="#888888"
            android:textSize="11sp"
            android:drawableTop="@drawable/ic_payment"
            android:drawableTint="#888888"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:gravity="center" />

        <!-- ITEM 4: PROFILE -->
        <TextView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textColor="#888888"
            android:textSize="11sp"
            android:drawableTop="@drawable/ic_user"
            android:drawableTint="#888888"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
