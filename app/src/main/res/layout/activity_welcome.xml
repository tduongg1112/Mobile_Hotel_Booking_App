<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. LỚP ẢNH NỀN (Nằm dưới cùng) -->
    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_welcome_bg"
        android:scaleType="centerCrop" />

    <!-- 2. LỚP NỘI DUNG (Căn giữa màn hình) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:padding="24dp">
        <!-- Đã đổi marginTop thành centerInParent để nội dung nằm chính giữa -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin Chào"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khám phá trải nghiệm đặt phòng tuyệt vời"
            android:textSize="18sp"
            android:textColor="#555555"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="48dp"/>
        <!-- Tăng khoảng cách margin bottom lên 48dp cho thoáng -->

        <!-- Nút Đăng ký -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_welcome_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:background="@drawable/bg_button_blue"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="14dp"
            android:layout_marginBottom="16dp"/>

        <!-- Nút Đăng nhập -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_welcome_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:background="@drawable/bg_button_blue"
            android:backgroundTint="#FFFFFF"
            android:textColor="#003AD2"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="14dp"/>

    </LinearLayout>

</RelativeLayout>