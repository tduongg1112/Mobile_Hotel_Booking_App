<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">
                <ImageButton
                    android:id="@+id/btn_back_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/btn_save_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="16sp"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Avatar & Upload Photo Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- ĐÃ SỬA: Thêm ID img_edit_avatar -->
                <ImageView
                    android:id="@+id/img_edit_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:background="@drawable/bg_input_underline"
                    android:padding="2dp"
                    android:scaleType="centerCrop"/>

                <!-- ĐÃ SỬA: Thêm ID tv_change_photo -->
                <TextView
                    android:id="@+id/tv_change_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Photo"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="12sp"
                android:textColor="#888888"/>
            <EditText
                android:id="@+id/et_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_input_underline"
                android:layout_marginBottom="24dp"
                android:inputType="textPersonName"/>

            <!-- Email (Read only) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email (Read only)"
                android:textSize="12sp"
                android:textColor="#888888"/>
            <EditText
                android:id="@+id/et_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#888888"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_input_underline"
                android:layout_marginBottom="24dp"
                android:enabled="false"/>

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="12sp"
                android:textColor="#888888"/>
            <EditText
                android:id="@+id/et_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_input_underline"
                android:layout_marginBottom="40dp"
                android:inputType="phone"/>

            <!-- Nút Cancel -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@drawable/bg_button_blue"
                android:backgroundTint="#CCCCCC"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>