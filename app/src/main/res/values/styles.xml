<resources>

    <!-- Theme cho CalendarView -->
    <style name="CalendarViewCustom" parent="Widget.MaterialComponents.CalendarView">
        <item name="android:weekDayTextAppearance">@style/CalendarViewWeekCustom</item>
        <item name="android:dateTextAppearance">@style/CalendarViewDateCustom</item>
    </style>

    <!-- Style ngày trong lịch -->
    <style name="CalendarViewDateCustom" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style thứ trong tuần -->
    <style name="CalendarViewWeekCustom" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
